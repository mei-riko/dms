extends ../blocks/main.pug

block variables
    - var pageTitle = "Log In"
block content
    main.intro
        .container-fluid
            .row
                .col-6.px-0
                    .intro__image
                .col-6
                    .row.align-items-center.justify-content-center.intro__form.pt-5.pb-5
                        .col-6.px-0
                            p.h5.text-uppercase Forgot your password?
                            p.font-secondary.text-bolder No problem. Just let us know your email address and we will email you a password reset link that will allow you to choose a new one.
                            form.form(action="") 
                                .form__group
                                    .form__label Email:
                                    input.input.input--full(type="text" placeholder="Enter your email" value="manager@dms.ru")
                                .form__group
                                    a.btn.btn-success.btn--full(href="index.html") Reset password                   
block footer