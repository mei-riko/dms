extends ../blocks/enter.pug

block variables
    - var pageTitle = "Sign up - Notification"
block content
    main.intro
        .container-fluid
            .row
                .col-12.col-md-6.px-0
                    .intro__image
                .col-12.col-md-6
                    .row.align-items-center.justify-content-center.intro__form.pt-5.pb-5
                        .col-10.col-lg-8.col-xl-6.px-0
                            p.h5.text-uppercase Sign up
                            p.font-secondary.text-bolder Don't have an account? Create your account, it takes less than a minute
                            form.form(action="") 
                                .form__alert
                                    .alert.alert-primary This email has already used.
                                .form__group
                                    .form__label Full Name:
                                    input.input.input_success.input--full(type="text" placeholder="Enter your first name" value="Jane")
                                .form__group
                                    .form__label E-mail:
                                    input.input.input_info.input--full(type="email" placeholder="Enter your e-mail" value="manager@dms.ru")
                                .form__group
                                    .form__label Password
                                    input.input.input_success.input--full(type="password" placeholder="Enter password" value="manager")
                                .form__group
                                    a.btn.btn-success.btn--full(href="dashboard.html") Create account
                                .form__additional
                                    p.text-smaller Already have account? 
                                        a.text-bold(href="index.html") Log In
                    
block footer